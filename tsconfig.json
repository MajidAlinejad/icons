{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx", // or "react" for React 16 or earlier
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "./dist",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}